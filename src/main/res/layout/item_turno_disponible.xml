<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_turno_disponible"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:id="@+id/ll_turno_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:minHeight="200dp">

        <!-- Header: Foto y nombre del médico -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_medico_turno"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_user_placeholder"
                android:background="@drawable/circle_white_bg"
                android:padding="2dp"
                android:alpha="0.3"
                android:contentDescription="Foto del médico"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_nombre_medico_turno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. Juan Pérez"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:maxLines="2"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tv_especialidades_turno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Traumatología, Dermatología"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:alpha="0.9"
                    android:layout_marginTop="4dp"
                    android:maxLines="2"
                    android:ellipsize="end"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:background="@android:color/white"
            android:alpha="0.3"/>

        <!-- Horario de trabajo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_clock"
                app:tint="@android:color/white"
                android:alpha="0.9"/>

            <TextView
                android:id="@+id/tv_horario_trabajo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Horario: 10:00 - 14:00"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <!-- Título de horarios disponibles -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Horarios disponibles HOY:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"/>

        <!-- Chips de horarios -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_horarios_turno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:chipSpacing="8dp"
            app:chipSpacingVertical="6dp"
            app:singleLine="false"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>