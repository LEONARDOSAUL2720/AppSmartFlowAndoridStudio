<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Handle del BottomSheet -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bottom_sheet_handle" />

        <!-- TÃ­tulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalles de la Receta"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="16dp" />

        <!-- Card de InformaciÃ³n del MÃ©dico -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Foto y nombre del mÃ©dico -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/iv_medico_foto_detalle"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/circle_border_green"
                        android:scaleType="centerCrop"
                        android:contentDescription="Foto del mÃ©dico"
                        tools:src="@drawable/ic_launcher_foreground" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_medico_nombre_detalle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textColor="#333333"
                                android:textStyle="bold"
                                tools:text="Dr. Juan PÃ©rez" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_verified"
                                android:layout_marginStart="8dp"
                                android:contentDescription="Verificado"
                                app:tint="#57B894" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_especialidad_detalle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="#757575"
                            android:layout_marginTop="4dp"
                            tools:text="CardiologÃ­a" />

                        <TextView
                            android:id="@+id/tv_cedula_detalle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="#9E9E9E"
                            android:layout_marginTop="4dp"
                            tools:text="CÃ©dula: 1234567" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Separador -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="12dp" />

                <!-- Fecha y Hora -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_calendar"
                        android:contentDescription="Fecha"
                        app:tint="#757575" />

                    <TextView
                        android:id="@+id/tv_fecha_detalle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_marginStart="8dp"
                        tools:text="15 de Noviembre, 2024" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_clock"
                        android:contentDescription="Hora"
                        app:tint="#757575" />

                    <TextView
                        android:id="@+id/tv_hora_detalle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:layout_marginStart="8dp"
                        tools:text="10:30 AM" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Card de Medicamentos -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’Š Medicamentos Prescritos"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp" />

                <!-- Lista de medicamentos (se llenarÃ¡ dinÃ¡micamente) -->
                <LinearLayout
                    android:id="@+id/ll_medicamentos_lista"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Los medicamentos se agregarÃ¡n aquÃ­ dinÃ¡micamente -->

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Card de Observaciones -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_observaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ Notas Adicionales"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_observaciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:lineSpacingExtra="4dp"
                    tools:text="El paciente debe tomar los medicamentos con alimentos..." />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- BotÃ³n Descargar PDF -->
        <Button
            android:id="@+id/btn_descargar_pdf"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ðŸ“„ Descargar PDF"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_rounded_turquoise"
            android:layout_marginBottom="8dp" />

        <!-- BotÃ³n Ver QR (opcional) -->
        <Button
            android:id="@+id/btn_ver_qr"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ðŸ“± Ver CÃ³digo QR"
            android:textColor="#2A6FB0"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/button_outlined_blue"
            android:visibility="gone" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>