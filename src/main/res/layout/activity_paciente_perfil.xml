<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="35dp"
    android:background="#F5F5F5">

    <!-- Header con gradiente y esquinas inferiores redondeadas -->
    <View
        android:id="@+id/header_background"
        android:layout_width="0dp"
        android:layout_height="160dp"
        android:background="@drawable/header_rounded_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón de regresar -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/circle_white_translucent_bg"
        android:src="@drawable/ic_arrow_back"
        android:scaleType="centerInside"
        android:padding="12dp"
        android:elevation="4dp"
        android:contentDescription="Regresar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Título centrado -->
    <TextView
        android:id="@+id/tv_titulo_perfil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Perfil de Usuario"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_back"
        app:layout_constraintEnd_toStartOf="@id/btn_share" />

    <!-- Botón de compartir -->
    <ImageButton
        android:id="@+id/btn_share"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:background="@drawable/circle_white_translucent_bg"
        android:src="@drawable/ic_share"
        android:scaleType="centerInside"
        android:padding="12dp"
        android:elevation="4dp"
        android:contentDescription="Compartir"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Foto del usuario (circular) - AJUSTADA -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_photo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="70dp"
        app:cardCornerRadius="60dp"
        app:cardElevation="8dp"
        app:strokeWidth="4dp"
        app:strokeColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_user_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground"
            android:contentDescription="Foto del usuario" />

    </com.google.android.material.card.MaterialCardView>

    <!-- Nombre del usuario - AJUSTADO -->
    <TextView
        android:id="@+id/tv_user_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Leonardo"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#2E2E2E"
        app:layout_constraintTop_toBottomOf="@id/header_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Rol del usuario -->
    <TextView
        android:id="@+id/tv_user_rol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Paciente"
        android:textSize="14sp"
        android:textColor="#757575"
        app:layout_constraintTop_toBottomOf="@id/tv_user_nombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ScrollView para el contenido -->
    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/tv_user_rol"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp">

            <!-- Card UNIFICADO: Estadísticas + Info de contacto -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Sección de Estadísticas -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp"
                        android:weightSum="3">

                        <!-- Total Citas -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_calendar_check"
                                android:layout_marginBottom="8dp"
                                app:tint="@color/colorPrimary" />

                            <TextView
                                android:id="@+id/tv_stats_citas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#2E2E2E" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Citas"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Miembro desde -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_calendar_check"
                                android:layout_marginBottom="8dp"
                                app:tint="@color/colorPrimary" />

                            <TextView
                                android:id="@+id/tv_stats_miembro"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2025"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#2E2E2E" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Miembro"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Estado Activo -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_star"
                                android:layout_marginBottom="8dp"
                                app:tint="#FFD700" />

                            <TextView
                                android:id="@+id/tv_stats_activo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Activo"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#2E2E2E" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Estado"
                                android:textSize="12sp"
                                android:textColor="#757575"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Línea divisoria -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#F0F0F0"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp" />

                    <!-- Sección de Información de Contacto -->
                    <LinearLayout
                        android:id="@+id/card_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Email -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_email"
                                android:layout_marginEnd="12dp"
                                app:tint="#9E9E9E" />

                            <TextView
                                android:id="@+id/tv_user_email"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="email@ejemplo.com"
                                android:textSize="14sp"
                                android:textColor="#424242" />

                        </LinearLayout>

                        <!-- Teléfono -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_phone"
                                android:layout_marginEnd="12dp"
                                app:tint="#9E9E9E" />

                            <TextView
                                android:id="@+id/tv_user_telefono"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="+52 123 456 7890"
                                android:textSize="14sp"
                                android:textColor="#424242" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Sección Mis Citas -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mis Citas"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2E2E2E"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="4dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_calendar_check"
                            android:layout_marginEnd="12dp"
                            app:tint="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/tv_total_citas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 citas agendadas"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#2E2E2E" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_ver_citas"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Ver mis citas"
                        android:textColor="@color/colorPrimary"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        app:cornerRadius="12dp"
                        app:strokeColor="@color/colorPrimary"
                        app:strokeWidth="1dp"
                        style="@style/Widget.Material3.Button.OutlinedButton" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Sección Configuración -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Configuración"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2E2E2E"
                android:layout_marginBottom="12dp"
                android:layout_marginStart="4dp" />

            <!-- Botón Cerrar Sesión -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cerrar_sesion"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="12dp"
                android:text="Cerrar Sesión"
                android:textColor="#E53935"
                android:textAllCaps="false"
                android:textSize="14sp"
                app:cornerRadius="12dp"
                app:strokeColor="#E0E0E0"
                app:strokeWidth="1dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <!-- Botón Editar Perfil -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_editar_perfil"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Editar Perfil"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textAllCaps="false"
                app:cornerRadius="12dp"
                app:backgroundTint="@color/colorPrimary"
                style="@style/Widget.Material3.Button" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>