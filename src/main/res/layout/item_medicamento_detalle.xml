<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_medicamento_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:text="Paracetamol 500mg" />

    <TextView
        android:id="@+id/tv_medicamento_detalles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginTop="4dp"
        android:lineSpacingExtra="2dp"
        android:text="• Dosis: 500mg\n• Frecuencia: Cada 8 horas\n• Duración: 5 días" />

    <View
        android:id="@+id/separador_medicamento"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

</LinearLayout>